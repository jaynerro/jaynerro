class A{
    //constructeur
    public A() {

    }
    public int additionxy(int x, int y){
        int z = x + y;
        return z;
    }
}
class B{
    static void main(){
        int w;
        int x=1;
        int y=2;
        A A1= new class A(); //instantiation de la classe A
        w= A1.additionxy(x,y); //utilisation de la m√©thode de la classe A
        console.writeline("le resultat est :" +w.toString());
    }
}